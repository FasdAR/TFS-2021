<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FlexBoxLayout">
        <attr name="android:verticalSpacing"/>
        <attr name="android:horizontalSpacing"/>

        <attr name="android:gravity">
            <flag name="start" value="0x03" />
            <flag name="end" value="0x05" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ReactionView">
        <attr name="rvSelectedTextColor" format="reference|color"/>
        <attr name="rvUnselectedTextColor" format="reference|color"/>

        <attr name="rvEmoji" format="string"/>
        <attr name="rvCountReaction" format="integer"/>
    </declare-styleable>

    <!-- #region Message View Groups -->
    <declare-styleable name="MessageViewGroupRoot">
        <attr name="mvMessage" format="string"/>
    </declare-styleable>

    <declare-styleable name="ExternalMessageViewGroup">
        <attr name="mvMessage"/>
        <attr name="mvName" format="string"/>
        <attr name="mvSrcAvatar" format="reference|color"/>
    </declare-styleable>

    <declare-styleable name="InternalMessageViewGroup">
        <attr name="mvMessage"/>
    </declare-styleable>
    <!-- #endregion -->
</resources>