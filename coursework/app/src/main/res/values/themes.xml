<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.TFS.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/teal_500</item>
        <item name="colorPrimaryVariant">@color/grey_910</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/grey_920</item>
        <item name="colorSecondaryVariant">@color/black_850</item>
        <item name="colorOnSecondary">@color/grey_400</item>

        <item name="android:windowBackground">@color/black_850</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="bottomNavigationStyle">@style/Widget.TFS.BottomNavigationView</item>

        <item name="fontFamily">@font/inter</item>
        <item name="tabStyle">@style/Widget.TFS.TabLayout</item>
    </style>

    <style name="Theme.TFS.Main" parent="Theme.TFS.Base"/>

    <style name="Theme.TFS.BottomSheetDialog" parent="Theme.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/Widget.TFS.MaterialComponents.BottomSheet.Modal</item>
    </style>

    <style name="ThemeOverlay.TFS.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/grey_910</item>
        <item name="colorOnPrimary">@color/grey_510</item>
        <item name="colorOnPrimarySurface">@color/white_50</item>
    </style>
</resources>