<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TFS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cyan_500</item>
        <item name="colorPrimaryVariant">@color/cyan_500</item>
        <item name="colorOnPrimary">@color/white_900</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black_900</item>
        <item name="colorSecondaryVariant">@color/black_910</item>
        <item name="colorOnSecondary">@color/black_400</item>
        <!-- Status bar color. -->

        <item name="android:windowBackground">@color/black_910</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>
</resources>