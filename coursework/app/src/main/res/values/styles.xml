<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget"/>
    <style name="Widget.TFS"/>

    <style name="Widget.TFS.ReactionView">
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:background">@drawable/sh_reaction</item>
    </style>

    <style name="Widget.TFS.Button.UnelevatedButton.IconOnly" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.TFS.Button.UnelevatedButton.IconOnly.Circle" parent="Widget.TFS.Button.UnelevatedButton.IconOnly">
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Widget.TFS.MaterialComponents.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TFS.BottomSheet.Modal</item>
        <item name="backgroundTint">@color/grey_920</item>
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="Widget.TFS.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/tfs_bottom_nav_color_item</item>
        <item name="itemTextColor">@color/tfs_bottom_nav_color_item</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.TFS.BottomNavigationView</item>
    </style>

    <style name="Widget.TFS.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
    </style>

    <style name="Widget.TFS.Toolbar.Black" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/grey_910</item>
        <item name="titleTextColor">@color/white</item>
        <item name="collapseIcon">@drawable/ic_back</item>
    </style>

    <style name="ShapeAppearanceOverlay.TFS.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.TFS.Rectangle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.TFS.BottomSheet.Modal" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>