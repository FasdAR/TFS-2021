<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget"/>
    <style name="Widget.TFS"/>

    <style name="Widget.TFS.ReactionView">
        <item name="android:paddingLeft">9dp</item>
        <item name="android:paddingRight">9dp</item>
        <item name="android:background">@drawable/sh_reaction</item>
    </style>

    <style name="Widget.TFS.Button.UnelevatedButton" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="elevation">0dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget.TFS.Button.UnelevatedButton.IconOnly" parent="Widget.TFS.Button.UnelevatedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="Widget.TFS.Button.UnelevatedButton.IconOnly.Circle" parent="Widget.TFS.Button.UnelevatedButton.IconOnly">
        <item name="cornerRadius">100dp</item>
    </style>

    <style name="Widget.TFS.MaterialComponents.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.TFS.BottomSheet.Modal</item>
        <item name="backgroundTint">@color/grey_920</item>
        <item name="behavior_peekHeight">500dp</item>
    </style>

    <style name="Widget.TFS.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemIconTint">@color/tfs_bottom_nav_color_item</item>
        <item name="itemTextColor">@color/tfs_bottom_nav_color_item</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.TFS.BottomNavigationView</item>
        <item name="itemTextAppearanceActive">@style/TextAppearance.TFS.BottomNavigation</item>
        <item name="itemTextAppearanceInactive">@style/TextAppearance.TFS.BottomNavigation</item>
    </style>

    <style name="Widget.TFS.Toolbar.Primary" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/white</item>
        <item name="collapseIcon">@drawable/ic_back</item>
        <item name="android:minHeight">66dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="contentInsetStart">30dp</item>
        <item name="contentInsetStartWithNavigation">87dp</item>
        <item name="titleTextAppearance">@style/TextAppearance.TFS.Toolbar.Title</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
    </style>

    <style name="Widget.TFS.Toolbar.Primary.Black" parent="Widget.TFS.Toolbar.Primary">
        <item name="android:background">@color/grey_910</item>
    </style>

    <style name="Widget.TFS.Toolbar.Primary.Teal" parent="Widget.TFS.Toolbar.Primary">
        <item name="android:background">@color/teal_500</item>
    </style>

    <style name="Widget.TFS.TabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabTextColor">@color/white</item>
        <item name="tabTextAppearance">@style/TextAppearance.TFS.TabLayout</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingBottom">8dp</item>
        <item name="tabIndicatorColor">@color/green_700</item>
        <item name="tabIndicator">@drawable/sh_tab_indicator</item>
        <item name="tabRippleColor">@null</item>
    </style>

    <style name="TextAppearance.TFS.TabLayout" parent="TextAppearance.MaterialComponents.Button">
        <item name="textAllCaps">false</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="TextAppearance.TFS.Toolbar.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="TextAppearance.TFS.BottomNavigation" parent="TextAppearance.AppCompat.Caption">
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ShapeAppearanceOverlay.TFS.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.TFS.Rectangle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.TFS.BottomSheet.Modal" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">10dp</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>
</resources>