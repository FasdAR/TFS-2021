<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="ru.fasdev.tfs.view.customView.MessageView">

    <ImageView
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:id="@+id/avatar"
        android:src="@color/black_900" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingTop="8dp"
      android:paddingLeft="13dp"
      android:paddingRight="13dp"
      android:paddingBottom="20dp"
      android:background="@drawable/sh_msg"
      android:layout_marginStart="9dp"
      android:id="@+id/msg_layout">

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textColor="#2A9D8F"
          android:textSize="14sp"
          android:text="Darrell Steward"/>

        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginTop="4dp"
          android:textSize="16sp"
          android:textColor="#FAFAFA"
          android:text="Привет! lshe zabil sdds sd sd sdsa dasd asd sda sd sd sd sd sd"/>
    </LinearLayout>

</merge>