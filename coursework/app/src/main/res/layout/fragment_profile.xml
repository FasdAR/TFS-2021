<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guideline_top_card"
        app:layout_constraintGuide_percent="0.19"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/guideline_bottom_btn"
        app:layout_constraintGuide_percent="0.92"/>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:name="ru.fasdev.tfs.view.ui.fragment.cardProfile.CardProfileFragment"
        android:tag="ass"
        app:layout_constraintTop_toTopOf="@id/guideline_top_card"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        style="@style/Widget.TFS.Button.UnelevatedButton"
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingRight="56dp"
        android:paddingLeft="56dp"
        android:backgroundTint="@color/grey_930"
        android:text="@string/log_out"
        app:cornerRadius="31dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guideline_bottom_btn"/>

</androidx.constraintlayout.widget.ConstraintLayout>