<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/msg_text"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:layout_width="0dp"
        android:layout_height="51dp"
        android:id="@+id/msg_text"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="5dp"
        android:hint="@string/to_write"
        android:textSize="20sp"
        android:textColor="@color/black_400"
        android:textColorHint="@color/black_400"
        android:paddingLeft="21dp"
        android:paddingRight="21dp"
        android:background="@drawable/sh_msg_edit"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/send_btn"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        style="@style/Widget.TFS.Button.UnelevatedButton.IconOnly.Circle"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:id="@+id/send_btn"
        android:layout_marginEnd="15dp"
        app:icon="@drawable/ic_send"
        app:iconTint="?android:windowBackground"
        app:layout_constraintTop_toTopOf="@id/msg_text"
        app:layout_constraintBottom_toBottomOf="@id/msg_text"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>