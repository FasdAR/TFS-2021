<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextAppearance.HomeWorkOne.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="Widget"/>


    <style name="Widget.HomeWorkOne.Button.UnelevatedButton"
        parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="cornerRadius">3dp</item>
    </style>

    <style name="Widget.HomeWorkOne.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="backgroundColor">@color/main_white_50</item>
        <item name="titleTextColor">@color/main_black_gray_900</item>
    </style>

    <style name="Widget.HomeWorkOne.Text.Description" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/main_black_gray_900</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.HomeWorkOne.Text.Contact.ItemRow" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/main_black_gray_900</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.HomeWorkOne.Text.Contact.ItemRow.Desc" parent="Widget.HomeWorkOne.Text.Contact.ItemRow">
        <item name="android:textSize">14sp</item>
    </style>
</resources>